---

# bgp neighbor table
bgp_neigh_tbl:
  rpc: get-bgp-neighbor-information
  item: bgp-peer
  key: peer-address
  view: _bgp_neigh_tbl_view

_bgp_neigh_tbl_view:
  fields:
    peer_state: peer-state
    local_address: local-address
    peer_address: peer-address
    peer_asn: peer-as
    description: description
    peer_prefixes_received: bgp-rib/received-prefix-count
    peer_prefixes_accepted: bgp-rib/accepted-prefix-count
    peer_prefixes_active: bgp-rib/active-prefix-count

